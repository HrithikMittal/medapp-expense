<%- include("../partials/header.ejs") %>
  <div class="box1">
     <div class="wrapper animated bounceInDown">
       <div class="company-info title-container">
             <h1 class="title-container__title">Medapp.in</h1>
             <h3 class="title-container__subtitle">Touching life, changing life, and saving lives.</h3>
           </div>
               <form class="form-container" action="/employee/register" method="post">
                 <h1 align="center" style="color: White;" class="mb-3">Employee Registration</h1>
                 <div align="center" class="mt-5">
                 <input type="text" name="name" placeholder="Enter name..." value="<%= name %>" required>
                 <input type="email" name="email" placeholder="Enter email..." value="<%= email %>"  class="mt-2" required>
                 <input type="password" name="password" placeholder="Enter Password..." required>
                 <input type="password" name="confPassword" value="" placeholder="Confirm Password..." class="mt-2" required>
                 </div>
                 <div align="center" class="mt-3">
                 <button type="submit" name="button" class="mt-3 w-50">Register</button>
                 </div>
                 <div align="center" class="mt-3">
                 <a class="mt-3 w-50 text-center"  href="/employee/login">Already have a account?</a>
                 </div>
               </form>
           </div>
      </div>
  </div>
<%- include("../partials/footer.ejs") %>
