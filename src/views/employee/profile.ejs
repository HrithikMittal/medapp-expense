<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="/styles1.css">
<link rel="stylesheet" href="/bootstrap.min.css">
<div style="background-image: linear-gradient(45deg,#334d50,#cbcaa5); min-height:100vh;">
         <div class="box1">
           <div class="wrapper animated fadeIn">
             <div class="company-info title-container">
                    <h1 class="title-container__title">Your Credentials</h1>
                    <h3 class="title-container__subtitle">Update your profile details here...</h3>
             </div>
                   <form class="form-container" action="/employee/profile" method="post" enctype="multipart/form-data">
                     <div class="d-flex justify-content-end mb-3">
                       <a class="text-center btn text-white" style="background-color: #58B19F;" href="/employee/dashboard">Back To Dashboard</a>
                       <a class="text-center btn text-white" style="background-color: #58B19F;" href="/employee/logout">Logout</a>
                     </div>
                     <h3 class="mb-4" style="color: white;">Employee Details</h3>
                     <div align="center" class="mt-3">
                       <label for="avatar" style="color: white; font-size:25px;">Profile Image</label>
                       <img class="mb-3" src="/employee/avatar?size=small" style="width:100px">
                     <input type="file" name="avatar" class="mt-3 w-75">
                     <input type="text" name="name" class="mt-3 w-75" placeholder="Enter Your Name" value="<%= name %>" required>
                     <input type="text" name="email" class="mt-3 w-75" value="<%= email %>" disabled required>
                     <input type="text" name="designation" class="mt-3 w-75" placeholder="Enter your designation" value="<%= designation %>">
                     <input type="text" name="department" class="mt-3 w-75" placeholder="Enter your department" value="<%= department %>">
                     <button type="submit" onclick="this.disabled=true; this.form.submit(); return false;" name="button" class="mt-3 w-50">Update</button>
                     </div>
                   </form>
            </div>
          </div>
      </div>
<%- include("../partials/footer.ejs") %>
